{
  "compilerOptions": {
    "lib": [
      "ESNext"
    ],
    "types": [
      "node",
      "cheerio",
      "jest"
    ],
    "rootDir": "./src",
    "outDir": "./dist",
    "moduleResolution": "node",
    "declaration": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "strict": true,
    "noImplicitAny": true,
  },
  "include": [
    "src",
    "custom-types.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/__tests__"
  ]
}